;; For debugging
(setq debug-on-error t)


;; Setup the loading path
 (setq load-path (append
		   '("~/.emacs.d"
		     "~/.emacs.d/packages")
;; UTF-8
(set-locale-environment nil)
(set-language-environment "English")
(set-terminal-coding-system 'utf-8)
(set-keyboard-coding-system 'utf-8)
(set-buffer-file-coding-system 'utf-8)
(setq default-buffer-file-coding-system 'utf-8)
(set-default-coding-systems 'utf-8)
(prefer-coding-system 'utf-8)

;; Disable startup message
(setq inhibit-startup-message t)

;; Disable to create backup file
(setq make-backup-files nil)

;; Diable to create auto-save files
(setq delete-auto-save-files t)

;; Disable pop up frames
(setq ns-pop-up-frames nil)

;; Disable menu bar
(menu-bar-mode -1)

;; Enlight the opposite cursor
(show-paren-mode 1)

;; Scroll by each line
(setq scroll-conservatively 1)


;; " yes or no " => " y or n "
(fset 'yes-or-no-p 'y-or-n-p)

;; Disable beep
(defun my-bell-function ()
  (unless (memq this-command
		'(isearch-abort abort-recursive-edit exit-minibuffer
				keyboard-quit mwheel-scroll down up next-line previous-line
				backward-char forward-char))
    (ding)))
(setq ring-bell-function 'my-bell-function)

;; Enable Mac keybinding
(mac-key-mode 1)

;; Chagne option to meta
(setq mac-option-modifier 'meta)

;; Language specific setting
;; For ocaml
(setq exec-path (append exec-path (list "/usr/local/bin")))
(load "~/.emacs.d/extended/tuareg/tuareg-site-file.el")

